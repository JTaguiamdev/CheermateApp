<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for notifications and alarms -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".CheermateApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_cheermate_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cheermate_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CheermateApp">

        <!-- ActivityLogin as launcher (working fix) -->
        <activity
            android:name=".ActivityLogin"
            android:exported="true"
            android:theme="@style/Theme.CheermateApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Personality Selection Activity -->
        <activity
            android:name=".PersonalityActivity"
            android:exported="false" />

        <!-- MainActivity (Dashboard with Fragment Switching) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Sign Up Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.CheermateApp" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.CheermateApp" />

        <!-- Task Detail Activity -->
        <activity
            android:name=".TaskDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CheermateApp" />

        <!-- Fragment Task Extension Activity -->
        <activity
            android:name=".FragmentTaskExtensionActivity"
            android:exported="false"
            android:theme="@style/Theme.CheermateApp" />

        <!-- Reminder Broadcast Receiver -->
        <receiver
            android:name=".receiver.ReminderReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>
</manifest>
