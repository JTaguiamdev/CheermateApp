<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FF6B6B"/>      <!-- Brighter red on press -->
            <stroke android:width="1dp" android:color="#66FF6B6B"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#26FF6B6B"/>      <!-- Subtle red hover -->
            <stroke android:width="1dp" android:color="#59FF6B6B"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFF6B6B"/>      <!-- Base red glass -->
            <stroke android:width="1dp" android:color="#4DFF6B6B"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>