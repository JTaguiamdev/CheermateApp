<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#26FFFFFF"/>      <!-- Brighter on press -->
            <stroke android:width="1dp" android:color="#66FFFFFF"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/>      <!-- Subtle hover -->
            <stroke android:width="1dp" android:color="#4DFFFFFF"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/>      <!-- Focused state -->
            <stroke android:width="2dp" android:color="#80FFFFFF"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D000000"/>      <!-- Base dark glass -->
            <stroke android:width="1dp" android:color="#33FFFFFF"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
</selector>