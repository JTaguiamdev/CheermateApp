<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for CheermateApp
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="." />
        
        <!-- Include the app database -->
        <include domain="database" path="." />
        
        <!-- Exclude sensitive data like passwords (handled by Room encryption if enabled) -->
        <!-- Cache files should not be backed up -->
        
        <!-- External storage should be excluded for privacy -->


    </cloud-backup>
    
    <device-transfer>
        <!-- Transfer user preferences and settings during device migration -->
        <include domain="sharedpref" path="." />
        
        <!-- Transfer the app database -->
        <include domain="database" path="." />
        
        <!-- Do not transfer cache -->
    </device-transfer>
</data-extraction-rules>