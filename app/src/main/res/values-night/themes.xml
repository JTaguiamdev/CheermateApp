<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Force light mode even in dark mode system setting -->
    <style name="Base.Theme.CheermateApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Use light theme colors even when system is in dark mode -->
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        
        <!-- Switch styling for light mode -->
        <item name="colorControlActivated">#6B48FF</item>
        <item name="colorSwitchThumbNormal">#CCCCCC</item>
        <item name="android:colorForeground">@android:color/black</item>
    </style>
</resources>