<?xml version="1.0" encoding="utf-8"?>
<!-- Light mode spinner background -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/dialog_input_background"/>
    <corners 
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"/>
    <stroke 
        android:width="1dp" 
        android:color="@color/dialog_input_border"/>
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>