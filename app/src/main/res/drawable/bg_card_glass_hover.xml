<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/glassBackgroundPressed"/>
            <stroke android:width="1dp" android:color="?attr/glassBackgroundStrokePressed"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/glassBackgroundHover"/>
            <stroke android:width="1dp" android:color="?attr/glassBackgroundStrokeHover"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/glassBackgroundHover"/>
            <stroke android:width="2dp" android:color="?attr/glassBackgroundStrokePressed"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/glassBackgroundColor"/>
            <stroke android:width="1dp" android:color="?attr/glassBackgroundStroke"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
</selector>
