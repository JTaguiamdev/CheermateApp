<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - Violet circled -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/calendar_selected" />
            <stroke android:width="2dp" android:color="#FFFFFF40" />
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#CC9F5FD9" />
            <stroke android:width="2dp" android:color="#FFFFFF40" />
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>

    <!-- Today's date - Blue circled -->
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/calendar_today" />
            <stroke android:width="2dp" android:color="#FFFFFF40" />
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>

    <!-- Default state (transparent) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>
</selector>
