<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Supports automatic day/night mode -->
    <style name="Base.Theme.CheermateApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        
        <!-- Switch styling for light mode -->
        <item name="colorControlActivated">#6B48FF</item>
        <item name="colorSwitchThumbNormal">#CCCCCC</item>
        <!-- <item name="android:colorForeground">@android:color/black</item> -->
        
        <!-- Bottom sheet background -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        
        <!-- Material Alert Dialog with rounded corners -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.CheermateApp" parent="Base.Theme.CheermateApp" />
    
    <!-- Bottom Sheet Dialog Theme -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/bottom_sheet_background</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>
    
    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="backgroundTint">@color/bottom_sheet_background</item>
    </style>
    
    <style name="ShapeAppearance.App.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Dialog Theme with Rounded Corners -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Dialog Animation Style -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <!-- Enhanced Dialog Theme with Animations -->
    <style name="ThemeOverlay.App.AnimatedDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Dialog</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>