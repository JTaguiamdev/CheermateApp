<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Existing styles -->
    <style name="Rounded12Overlay">
        <item name="shapeAppearanceSmallComponent">@style/Rounded12Shape</item>
        <item name="shapeAppearanceMediumComponent">@style/Rounded12Shape</item>
        <item name="shapeAppearanceLargeComponent">@style/Rounded12Shape</item>
    </style>

    <style name="Rounded12Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Custom Calendar Theme -->
    <style name="CustomCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/calendar_today</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/gradient_start</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="materialCalendarStyle">@style/CustomMaterialCalendarStyle</item>
        <item name="materialCalendarHeaderConfirmButton">@style/CustomCalendarButton</item>
        <item name="materialCalendarHeaderCancelButton">@style/CustomCalendarButton</item>
    </style>

    <style name="CustomMaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/CustomDaySelected</item>
        <item name="dayTodayStyle">@style/CustomDayToday</item>
    </style>

    <style name="CustomDaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/calendar_selected</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemStrokeColor">@color/calendar_selected</item>
        <item name="itemStrokeWidth">2dp</item>
    </style>

    <style name="CustomDayToday" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemFillColor">@color/calendar_today</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemStrokeColor">@color/calendar_today</item>
        <item name="itemStrokeWidth">2dp</item>
    </style>

    <style name="CustomCalendarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom Date Picker Style for DatePickerDialog -->
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/calendar_today</item>
        <item name="colorAccent">@color/calendar_selected</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <!-- Custom Date Picker Style -->
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
    </style>

    <!-- Selected Date Text Style -->
    <style name="SelectedDateText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_bold</item>
    </style>

    <!-- Calendar Day Button Style -->
    <style name="CalendarDayButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/calendar_day_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- CalendarView Style for Light Mode -->
    <style name="CalendarViewStyle" parent="android:Widget.Material.CalendarView">
        <item name="android:dateTextAppearance">@style/CalendarViewDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekDayTextAppearance</item>
        <item name="android:headerTextAppearance">@style/CalendarViewHeaderTextAppearance</item>
    </style>

    <style name="CalendarViewDateTextAppearance" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarViewWeekDayTextAppearance" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarViewHeaderTextAppearance" parent="android:TextAppearance.Material.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
