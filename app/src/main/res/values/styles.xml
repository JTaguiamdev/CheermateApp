<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Existing styles -->
    <style name="Rounded12Overlay">
        <item name="shapeAppearanceSmallComponent">@style/Rounded12Shape</item>
        <item name="shapeAppearanceMediumComponent">@style/Rounded12Shape</item>
        <item name="shapeAppearanceLargeComponent">@style/Rounded12Shape</item>
    </style>

    <style name="Rounded12Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ============================= -->
    <!--  Clean Calendar Theme Overlay -->
    <!-- ============================= -->
    <style name="AppTheme.Calendar" parent="ThemeOverlay.Material3.Light">
        <!-- Header & controls color overrides -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">#6B48FF</item>
        <item name="colorControlActivated">#6B48FF</item>

        <!-- Selected date circle color -->
        <item name="colorPrimary">@color/calendar_selected</item>
        <!-- Text color on selected date circle -->
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Today's date text color -->
        <item name="colorOnSurfaceVariant">@color/calendar_today</item>
        <!-- Set the main text appearance for dates -->
        <item name="android:dateTextAppearance">@style/CalendarView.Date</item>
        <item name="android:weekDayTextAppearance">@style/CalendarView.WeekDay</item>
    </style>

    <!-- Base style for the calendar date text -->
    <style name="CalendarView.Date" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
    </style>

    <!-- Base style for the calendar weekday text (S, M, T, etc.) -->
    <style name="CalendarView.WeekDay" parent="android:TextAppearance.Material.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom Date Picker Style for DatePickerDialog -->
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/calendar_today</item>
        <item name="colorAccent">@color/calendar_selected</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <!-- Custom Date Picker Style -->
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:spinnersShown">false</item>
    </style>

    <!-- Selected Date Text Style -->
    <style name="SelectedDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_bold</item>
    </style>

    <!-- Calendar Day Button Style -->
    <style name="CalendarDayButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/calendar_day_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!-- Toolbar glass overlay forcing white content -->
    <style name="ThemeOverlay.Cheermate.ToolbarGlass" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- ============================= -->
    <!--  Task Dialog Accessible Styles -->
    <!-- ============================= -->
    
    <!-- Enhanced TextInputLayout with proper hint visibility -->
    <style name="TaskDialogTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/dialog_input_background</item>
        <item name="boxStrokeColor">@color/dialog_input_border</item>
        <item name="hintTextColor">@color/dialog_text_hint</item>
        <item name="android:textColorHint">@color/dialog_text_hint</item>
        <item name="errorTextColor">@color/dialog_text_error</item>
        <item name="startIconTint">@color/calendar_today</item>
        <item name="endIconTint">@color/calendar_today</item>
        <!-- Force EditText text color through the layout -->
        <item name="android:theme">@style/TaskDialogEditTextTheme</item>
    </style>

    <!-- Theme override for EditText within TextInputLayout -->
    <style name="TaskDialogEditTextTheme">
        <item name="editTextColor">@color/dialog_text_primary</item>
        <item name="android:editTextColor">@color/dialog_text_primary</item>
        <item name="android:textColor">@color/dialog_text_primary</item>
        <item name="android:textColorHint">@color/dialog_text_hint</item>
    </style>

    <!-- Enhanced EditText with proper text contrast -->
    <style name="TaskDialogEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/dialog_text_primary</item>
        <item name="android:textColorHint">@color/dialog_text_hint</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        <item name="android:textSize">16sp</item>
        <!-- Force text appearance -->
        <item name="android:textAppearance">@style/TaskDialogEditTextAppearance</item>
    </style>

    <!-- Text appearance to ensure proper coloring -->
    <style name="TaskDialogEditTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dialog_text_primary</item>
        <item name="android:textColorHint">@color/dialog_text_hint</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Label text style with proper contrast -->
    <style name="TaskDialogLabel">
        <item name="android:textColor">@color/dialog_label_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Helper text style -->
    <style name="TaskDialogHelperText">
        <item name="android:textColor">@color/dialog_helper_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Required asterisk style -->
    <style name="TaskDialogRequiredAsterisk">
        <item name="android:textColor">@color/dialog_required_asterisk</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_rounded_bold</item>
    </style>
</resources>
