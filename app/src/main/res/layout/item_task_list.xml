<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_glass_hover"
    android:padding="16dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Priority Indicator -->
    <View
        android:id="@+id/priorityIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:background="#FFE53E3E" />

    <!-- Task Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Task Description (optional, shown if available) -->
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textColor="@color/text_secondary_white_70"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- Info Row (Priority, Status, Due Date) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvTaskPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ High"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:background="@drawable/bg_chip_glass"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvTaskStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³ Pending"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_chip_glass"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvTaskDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“… Dec 25"
                android:textColor="@color/text_secondary_white_70"
                android:textSize="11sp"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:layout_marginStart="6dp"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
