<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_rounded_background">

    <!-- Reminder Time Picker -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_reminder_time"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_rounded_bold"
        android:textColor="@color/bottom_sheet_text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Date Picker Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickDate"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Select Date"
        android:textAllCaps="false"
        android:background="@drawable/bg_spinner_filled"
        android:textColor="@color/bottom_sheet_text_primary"
        android:fontFamily="@font/sf_pro_rounded_regular"
        app:icon="@drawable/ic_calendar_24dp"
        app:iconTint="@color/calendar_today"
        app:iconGravity="start"
        app:strokeColor="@color/bottom_sheet_button_border" />

    <!-- Time Picker Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickTime"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Select Time"
        android:textAllCaps="false"
        android:background="@drawable/bg_spinner_filled"
        android:textColor="@color/bottom_sheet_text_primary"
        android:fontFamily="@font/sf_pro_rounded_regular"
        app:icon="@drawable/ic_access_time_24dp"
        app:iconTint="@color/calendar_today"
        app:iconGravity="start"
        app:strokeColor="@color/bottom_sheet_button_border" />

    <!-- Quick Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or_choose_a_quick_option"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/bottom_sheet_text_primary"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <!-- Quick reminder options -->
    <RadioGroup
        android:id="@+id/rgQuickOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb15Minutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_15_minutes_before_due_time"
            android:padding="12dp"
            android:textColor="@color/bottom_sheet_text_primary"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:buttonTint="@color/calendar_today" />

        <RadioButton
            android:id="@+id/rb30Minutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_30_minutes_before_due_time"
            android:padding="12dp"
            android:textColor="@color/bottom_sheet_text_primary"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:buttonTint="@color/calendar_today" />

        <RadioButton
            android:id="@+id/rb1Hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_1_hour_before_due_time"
            android:padding="12dp"
            android:textColor="@color/bottom_sheet_text_primary"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:buttonTint="@color/calendar_today" />

        <RadioButton
            android:id="@+id/rb1Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_1_day_before_due_time"
            android:padding="12dp"
            android:textColor="@color/bottom_sheet_text_primary"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:buttonTint="@color/calendar_today" />

        <RadioButton
            android:id="@+id/rbCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_use_date_time_above"
            android:padding="12dp"
            android:checked="true"
            android:textColor="@color/bottom_sheet_text_primary"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:buttonTint="@color/calendar_today" />

    </RadioGroup>

    <!-- Selected reminder time display -->
    <TextView
        android:id="@+id/tvSelectedReminderTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_reminder_time_selected"
        android:textSize="12sp"
        android:textColor="@color/bottom_sheet_text_secondary"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:gravity="center" />

</LinearLayout>
