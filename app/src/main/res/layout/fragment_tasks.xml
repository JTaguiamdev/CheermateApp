<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header row: Title only (removed add button) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="@string/tasks"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Sub line: total tasks -->
    <TextView
        android:id="@+id/tvTasksSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:text="@string/_0_total_tasks"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="12sp" />

    <!-- Search + sort glass card -->
    <LinearLayout
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_glass_hover"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:stateListAnimator="@animator/card_elevation_state">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1AFFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/white" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/search_tasks"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/text_secondary_white_70" />

            <TextView
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Sort"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Found chip -->
        <TextView
            android:id="@+id/chipFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_glass"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/_0_found"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Filter tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/all_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/today_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/pending_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/done_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Task List (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Empty State Message -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ðŸ“‹ No tasks available\n\nTap + to add a new task!"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:visibility="gone" />

</LinearLayout>

<!-- Floating Action Button for Add Task -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fabAddTask"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="24dp"
    android:src="@android:drawable/ic_input_add"
    android:contentDescription="@string/add"
    app:tint="@android:color/white"
    app:backgroundTint="#6B4EFF"
    app:elevation="6dp"
    app:pressedTranslationZ="12dp" />

</FrameLayout>
