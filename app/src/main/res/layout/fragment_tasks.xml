<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <!-- Header row: Title only (add button removed, now using FAB) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="@string/tasks"
            android:paddingStart="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Sub line: total tasks -->
    <TextView
        android:id="@+id/tvTasksSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:paddingTop="2dp"
        android:paddingStart="10dp"
        android:paddingBottom="6dp"
        android:text="@string/_0_total_tasks"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="12sp" />

    <!-- Daily Progress Card -->
    <LinearLayout
        android:id="@+id/cardProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_card_glass_hover"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="14dp"
        android:stateListAnimator="@animator/card_elevation_state">

        <TextView
            android:id="@+id/progressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="Task Progress"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progressSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:paddingTop="6dp"
            android:text="0 of 0 tasks completed"
            android:textColor="@color/text_secondary_white_70"
            android:textSize="12sp" />

        <!-- Visual progress bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="#1AFFFFFF"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:id="@+id/progressFill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#A686F5FF" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/progressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:paddingTop="6dp"
            android:text="0%"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Search + sort glass card -->
    <LinearLayout
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_glass_hover"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:stateListAnimator="@animator/card_elevation_state">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1AFFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/white" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/search_tasks"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/text_secondary_white_70" />

            <TextView
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Sort"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Found chip -->
        <TextView
            android:id="@+id/chipFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_glass"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/_0_found"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Filter tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/all_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/today_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/pending_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/done_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Tasks RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card_glass_hover"
        android:clipToPadding="false"
        android:padding="10dp" />

    <!-- Empty State TextView -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card_glass_hover"
        android:elevation="2dp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="60dp"
        android:text="@string/no_tasks_available_n_ntap_the_button_to_create_your_first_task"
        android:textAlignment="center"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#6B48FF"
        android:elevation="6dp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        app:borderWidth="0dp" />


</LinearLayout>

    <!-- Floating Action Button for adding tasks -->

</FrameLayout>
