<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header row: Title + add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="@string/tasks"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnAddTask"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_chip_glass"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Sub line: total tasks -->
    <TextView
        android:id="@+id/tvTasksSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:text="@string/_0_total_tasks"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="12sp" />

    <!-- Search + sort glass card -->
    <LinearLayout
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_glass_hover"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:stateListAnimator="@animator/card_elevation_state">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1AFFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/white" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/search_tasks"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/text_secondary_white_70" />

            <TextView
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Sort"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Found chip -->
        <TextView
            android:id="@+id/chipFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_glass"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/_0_found"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Filter tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_glass"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/all_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/today_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/pending_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tabDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/done_0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Task Display Card (replaces empty state) -->
    <LinearLayout
        android:id="@+id/cardEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_card_glass_hover"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:stateListAnimator="@animator/card_elevation_state"
        android:visibility="visible">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="No tasks available"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:text="Select a filter to view your tasks"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:visibility="gone" />

        <!-- Priority Row -->
        <LinearLayout
            android:id="@+id/layoutPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvPriorityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:text="Priority: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvTaskPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="ðŸŸ¡ Medium"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Status Row -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:text="Status: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvTaskStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="â³ Pending"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Due Date Row -->
        <LinearLayout
            android:id="@+id/layoutDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvDueDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:text="Due: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvTaskDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="Sep 29, 2025 at 2:30 PM"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Progress Row -->
        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvProgressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:text="Progress: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvTaskProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="75%"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- âœ… NAVIGATION BUTTONS FOR MULTIPLE TASKS -->
        <LinearLayout
            android:id="@+id/layoutNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnPreviousTask"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_glass"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:gravity="center"
                android:text="â—€ Previous"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvTaskCounter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:gravity="center"
                android:text="1 / 3"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnNextTask"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip_glass"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:gravity="center"
                android:text="Next â–¶"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Action Button (Mark as Done) -->
        <TextView
            android:id="@+id/btnMarkDone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_glass"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="center"
            android:text="âœ… Mark as Done"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
