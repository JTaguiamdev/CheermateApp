<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Bottom Sheet Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Actions"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:fontFamily="@font/sf_pro_rounded_bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center" />

    <!-- Mark as Completed Option -->
    <LinearLayout
        android:id="@+id/action_mark_completed"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_background"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="âœ…"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Mark as Completed"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_rounded_regular" />
    </LinearLayout>

    <!-- Snooze Option -->
    <LinearLayout
        android:id="@+id/action_snooze"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_background"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="â°"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Snooze"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_rounded_regular" />
    </LinearLayout>

    <!-- Won't Do Option -->
    <LinearLayout
        android:id="@+id/action_wont_do"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/button_background"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="âŒ"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Won't Do"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_rounded_regular" />
    </LinearLayout>

    <!-- Dark Mode Toggle Option -->
    <LinearLayout
        android:id="@+id/action_dark_mode_toggle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/button_background"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="ðŸŒ™"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Dark Mode"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/sf_pro_rounded_regular" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Bottom padding -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>
