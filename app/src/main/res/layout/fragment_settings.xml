<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="@string/label_settings"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSettingsSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/sf_pro_rounded_regular"

            android:text="@string/label_settings_subtitle"
            android:textColor="@color/text_secondary_white_70"
            android:textSize="12sp" />

        <!-- Profile card -->
        <LinearLayout
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_glass_hover"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@animator/card_elevation_state">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_avatar_ring"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/ic_avatar_sample"  />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:text="@string/user"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvProfileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:text="@string/label_user_email_placeholder"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/chipPersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_chip_glass"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="@string/your_personality"
                android:textColor="@android:color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Stats card -->
        <LinearLayout
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_card_glass_hover"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:stateListAnimator="@animator/card_elevation_state">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_total_tasks"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_completed"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatSuccess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:text="0%"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_success_rate"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Personalization section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_personalization"
            android:textColor="@color/text_secondary_white_70"
            android:layout_marginStart="10dp"
            android:textSize="12sp" />

        <!-- AI Personality row -->
        <LinearLayout
            android:id="@+id/rowPersonality"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_magic_wand"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:text="@string/personality"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCurrentPersona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_personality"
                    android:textColor="@color/text_secondary_white_70"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Dark Mode row -->
        <LinearLayout
            android:id="@+id/rowDarkMode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_moon"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:text="@string/dark_mode"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/toggle_dark_light_theme"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="?attr/colorSwitchThumbNormal"
                android:trackTint="?attr/colorControlActivated" />
        </LinearLayout>

        <!-- App Settings section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_settings"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_secondary_white_70"
            android:textSize="12sp" />

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_card_glass_hover"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:text="@string/label_notifications"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/push_notifications_for_reminders"
                    android:textColor="@color/text_secondary_white_70"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="?attr/colorSwitchThumbNormal"
                android:trackTint="?attr/colorControlActivated" />
        </LinearLayout>

        <!-- Sign out card -->
        <LinearLayout
            android:id="@+id/cardSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card_glass_danger_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:text="@string/sign_out"
                android:textColor="@color/text_secondary_white_70"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_regular"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/cheermate_v1_0_0"
            android:textColor="@color/text_secondary_white_70"

            android:textSize="11sp" />
    </LinearLayout>
</ScrollView>
