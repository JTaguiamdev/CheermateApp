<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Priority indicator bar (optional) -->
    <View
        android:id="@+id/layoutPriorityIndicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="8dp"
        android:background="#FFE53E3E"
        android:visibility="visible" />

    <!-- Task Title -->
    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_rounded_bold"/>

    <!-- Task Description -->
    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!-- Priority and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvTaskPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŸ¡ Medium"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_rounded_bold"/>

        <TextView
            android:id="@+id/tvTaskStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â³ Pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Progress Bar Row (Optional - will be hidden if not found) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:progress="25"
            android:progressBackgroundTint="#33FFFFFF"
            android:progressTint="@android:color/white" />

        <TextView
            android:id="@+id/tvTaskProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="25%"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Due Date -->
    <TextView
        android:id="@+id/tvTaskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Due: Dec 25, 2024 at 3:30 PM"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="12sp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:layout_marginTop="4dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="âœ… Complete"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="center"
            android:background="@drawable/bg_chip_glass"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="âœï¸ Edit"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="center"
            android:background="@drawable/bg_chip_glass"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="ðŸ—‘ï¸ Delete"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="center"
            android:background="@drawable/bg_chip_glass"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>
