<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Fixed Toolbar (Not Scrollable) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_card_glass_hover"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="2dp"
        android:stateListAnimator="@animator/card_elevation_state"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:title="Task"
        app:titleTextColor="@color/text_primary"
        app:navigationIconTint="@color/toolbar_icon" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!-- Overdue Status Badge -->
            <LinearLayout
                android:id="@+id/overdue_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_chip_glass"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/overdue_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏰ Overdue by 12 days"
                    android:textColor="#FFED8936"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Task Details Card -->
            <LinearLayout
                android:id="@+id/task_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/bg_card_glass_hover"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/overdue_row"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                    <!-- Task Title label then field -->

                    <EditText
                        android:id="@+id/et_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task title"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:textSize="14sp"
                        android:paddingStart="10dp"
                        android:background="@android:color/transparent"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <!-- Task Description label then field -->

                    <EditText
                        android:id="@+id/et_task_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task description"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textSize="12sp"
                        android:background="@android:color/transparent"
                        android:paddingTop="6dp"
                        android:paddingStart="10dp"
                        android:paddingBottom="6dp"
                        android:gravity="top"
                        android:minLines="2"
                        android:maxLines="3" />

                    <!-- Task Status -->
                <TextView
                    android:id="@+id/tvTaskStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_chip_glass"
                    android:minWidth="0dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="@string/pending1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:focusable="false" />

                    <!-- Row: category, priority, due date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_task_category"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="Work"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/btn_task_priority"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="Medium"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/btn_task_due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="9/24/2025"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Reminder on its own row -->
                    <TextView
                        android:id="@+id/btn_task_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_chip_glass"
                        android:minWidth="0dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:text="⏰ Reminder"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />
            </LinearLayout>

            <!-- Subtasks Section -->
            <LinearLayout
                android:id="@+id/subtask_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="16dp"
                android:stateListAnimator="@animator/card_elevation_state"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_card"
                app:layout_constraintVertical_bias="0.0">

                <!-- Header row: title left, count right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:text="Subtasks"
                        android:textColor="@android:color/white"
                        android:paddingStart="15dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_items_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 items"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Placeholder input label like screenshot -->

                <!-- Subtask Input Field and Add Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_subtask_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip_glass"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:hint="Enter subtask"
                        android:minHeight="40dp"
                        android:paddingStart="14dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary_white_70"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_add_subtask"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:background="@drawable/bg_chip_glass"
                        android:minWidth="0dp"
                        android:paddingTop="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Empty state centered -->
                <TextView
                    android:id="@+id/tv_no_subtasks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:gravity="center"
                    android:text="No subtasks yet"
                    android:textColor="@color/text_secondary_white_70"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <!-- Runtime container (kept hidden initially) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subtasks_container"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:visibility="visible" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
