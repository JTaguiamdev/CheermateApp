<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Overdue Badge and Postpone Button Row -->
    <LinearLayout
        android:id="@+id/overdue_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_chip_glass"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/overdue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overdue by 11 days"
            android:textColor="#FFED8936"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:drawablePadding="8dp"
            android:paddingEnd="16dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/postpone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postpone"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:background="@drawable/bg_chip_glass"/>
    </LinearLayout>

    <!-- Task Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/overdue_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_glass">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks Title"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks Description"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_white_70"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Category -->
                <TextView
                    android:id="@+id/task_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Œ Others"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:background="@drawable/bg_chip_glass"
                    android:padding="6dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Priority -->
                <TextView
                    android:id="@+id/task_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Medium"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:background="@drawable/bg_chip_glass"
                    android:padding="6dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/task_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… 9/24/2025"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:background="@drawable/bg_chip_glass"
                    android:padding="6dp"/>
            </LinearLayout>

            <!-- Reminder (disabled) -->
            <TextView
                android:id="@+id/reminder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”” Reminder"
                android:textColor="@color/text_secondary_white_70"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:background="@drawable/bg_chip_glass"
                android:padding="6dp"
                android:layout_marginTop="8dp"
                android:enabled="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subtasks Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/subtask_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/task_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_glass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtasks"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro_rounded_bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No subtasks yet"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:textColor="@color/text_secondary_white_70"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
