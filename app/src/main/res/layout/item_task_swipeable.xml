<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="4dp"
    android:padding="16dp">

    <!-- Task Title -->
    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/sf_pro_rounded_bold"/>

    <!-- Task Description -->
    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:ellipsize="end"/>

    <!-- Priority and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvTaskPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŸ¡ Medium"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_rounded_bold"/>

        <TextView
            android:id="@+id/tvTaskStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â³ Pending"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Due Date -->
    <TextView
        android:id="@+id/tvTaskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Due: Dec 25, 2024 at 3:30 PM"
        android:textColor="@color/text_secondary_white_70"
        android:textSize="13sp"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:layout_marginTop="8dp"/>

</LinearLayout>
