<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:padding="16dp"
    android:layout_gravity="center">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Task"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <!-- Task Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_filled"
        android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Enter task title"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:maxLength="100"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textColorHint="?android:attr/textColorSecondary"
                        android:fontFamily="@font/sf_pro_rounded_regular" />
    </FrameLayout>

    <!-- Task Description Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description (Optional)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_filled"
        android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:background="@android:color/transparent"
                android:hint="Add detailed description..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="500"
                android:gravity="top|start"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:fontFamily="@font/sf_pro_rounded_regular" />
    </FrameLayout>

    <!-- Category and Priority Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Category -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_rounded_bold" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_spinner_filled"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:popupBackground="?android:attr/windowBackground"
                android:textColor="?android:attr/textColorPrimary"/>

        </LinearLayout>

        <!-- Priority -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_rounded_bold" />

            <Spinner
                android:id="@+id/spinnerPriority"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_spinner_filled"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:popupBackground="?android:attr/windowBackground"
                android:textColor="?android:attr/textColorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Due Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <!-- Date and Time Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Due Date -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_spinner_filled">

            <EditText
                android:id="@+id/etDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@android:color/transparent"
                android:hint="Select date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:drawableStart="@drawable/ic_calendar_24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="none" />

        </FrameLayout>

        <!-- Due Time -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_spinner_filled">

            <EditText
                android:id="@+id/etDueTime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:hint="Select time"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:drawableStart="@drawable/ic_access_time_24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

        </FrameLayout>

    </LinearLayout>

    <!-- Reminder Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_rounded_bold" />

    <Spinner
        android:id="@+id/spinnerReminder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_spinner_filled"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:popupBackground="?android:attr/windowBackground"
        android:textColor="?android:attr/textColorPrimary"/>

    <!-- Helper Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Required fields"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="@font/sf_pro_rounded_regular"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

                    <Button
                        android:id="@+id/btnCreateTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Task"
                        android:background="@drawable/bg_rounded_primary_button"
                        android:textColor="@color/btn_create_task_text_color" />
    </LinearLayout>

</LinearLayout>