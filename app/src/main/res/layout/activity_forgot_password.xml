<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/cheermate_logo"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:layout_marginBottom="8dp"/>

        <!-- Username (glass) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundColor="@color/glass_fill_color"
            app:boxStrokeColor="@color/glass_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:hint="@string/enter_username"
                android:textColor="@android:color/white"
                android:textColorHint="@color/glass_hint_color"
                android:inputType="textEmailAddress"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security Question (glass) - FIXED: Use MaterialAutoCompleteTextView -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSecurityQuestion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundColor="@color/glass_fill_color"
            app:boxStrokeColor="@color/glass_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etSecurityQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_security_question"
                android:textColor="@android:color/white"
                android:textColorHint="@color/glass_hint_color"
                android:inputType="none"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:drawablePadding="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:dropDownHeight="220dp"
                android:dropDownVerticalOffset="6dp"
                android:popupBackground="@drawable/bg_dropdown_round"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security Answer (glass) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSecurityAnswer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/glass_fill_color"
            app:boxStrokeColor="@color/glass_stroke_color"
            app:boxStrokeWidth="1dp"
            android:background="@null"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSecurityAnswer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:hint="@string/enter_security_answer"
                android:textColor="@android:color/white"
                android:textColorHint="@color/glass_hint_color"
                android:inputType="textCapSentences"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Verify button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="@string/Continue"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textAllCaps="false"
            android:theme="@style/Rounded12Overlay"/>
    </LinearLayout>
</ScrollView>
