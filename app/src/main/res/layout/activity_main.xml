<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Content scrolls; bottom nav stays fixed -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Greeting + avatar row (visual only) -->
            <LinearLayout
                android:id="@+id/rowGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Good morning"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/sf_pro_rounded_regular"/>

                <TextView
                    android:id="@+id/usernameTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JTaguiam"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/sf_pro_rounded_bold"/>
            </LinearLayout>

            <!-- Quick Schedule (Calendar Card) -->
            <LinearLayout
                android:id="@+id/cardCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/quickScheduleTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quick Schedule"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"/>

                    <TextView
                        android:id="@+id/quickAddChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Tap to add"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:background="@drawable/bg_chip_glass"/>
                </LinearLayout>

                <!-- Calendar placeholder block (replace with CalendarView/Recycler later) -->
                <LinearLayout
                    android:id="@+id/calendarPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="#1AFFFFFF"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="September 2025"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"/>
                </LinearLayout>

                <!-- Legend row (Done | Pending | Overdue) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● Done"
                        android:textColor="#52E39E"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:paddingRight="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● Pending"
                        android:textColor="#6BB6FF"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:paddingRight="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● Overdue"
                        android:textColor="#FF6B6B"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Personality highlight card -->
            <LinearLayout
                android:id="@+id/cardPersonality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state">

                <TextView
                    android:id="@+id/personalityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalog Vibes"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/sf_pro_rounded_bold"/>

                <TextView
                    android:id="@+id/personalityDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The funny friend who makes everything entertaining!"
                    android:textColor="@color/text_secondary_white_70"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/btnMotivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Motivate Me!"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:background="@drawable/bg_chip_glass"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- Stats grid: Total | Done | Today | Overdue -->
            <LinearLayout
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state"
                android:orientation="vertical"
                android:padding="12dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <!-- Stat cell template -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="#14000000"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_rounded_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/text_secondary_white_70"
                            android:textSize="12sp"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="#14000000"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_rounded_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:textColor="@color/text_secondary_white_70"
                            android:textSize="12sp"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="#14000000"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_rounded_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="@color/text_secondary_white_70"
                            android:textSize="12sp"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="#14000000"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/sf_pro_rounded_bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overdue"
                            android:textColor="@color/text_secondary_white_70"
                            android:textSize="12sp"
                            android:fontFamily="@font/sf_pro_rounded_regular"/>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <!-- Daily Progress Card -->
            <LinearLayout
                android:id="@+id/cardProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state">

                <TextView
                    android:id="@+id/progressTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Progress"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/sf_pro_rounded_bold"/>

                <TextView
                    android:id="@+id/progressSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 of 0 tasks completed"
                    android:textColor="@color/text_secondary_white_70"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_rounded_regular"
                    android:paddingTop="6dp"/>

                <!-- Visual progress bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:background="#1AFFFFFF"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/progressFill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#A686F5FF"/>
                </LinearLayout>

                <!-- remainder (transparent spacer) -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="75"/>

                <TextView
                    android:id="@+id/progressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:layout_gravity="end"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Recent Tasks Card -->
            <LinearLayout
                android:id="@+id/cardRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/bg_card_glass_hover"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="2dp"
                android:stateListAnimator="@animator/card_elevation_state">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Tasks"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"/>

                    <TextView
                        android:id="@+id/btnAddTaskChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/bg_chip_glass"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No tasks yet. Create your first task to get started!"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_rounded_regular"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation (3 items) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:itemGravity="center"
        android:foregroundGravity="center"

        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_card_glass_hover"/>
</LinearLayout>
